<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/card_stroke"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Commodity Image with better styling -->
        <ImageView
            android:id="@+id/imageCommodity"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_commodity_placeholder"
            android:scaleType="centerCrop"
            android:contentDescription="Commodity image"
            android:background="@drawable/image_circle_bg"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Circle"
            android:layout_marginEnd="16dp" />

        <!-- Main content area -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Header row with name and status indicator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textCommodityName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Maize"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/on_surface"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <!-- Status indicator dot -->
                <View
                    android:id="@+id/indicatorStatus"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/indicator_online"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Last updated with icon -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_schedule"
                    android:tint="@color/on_surface_variant"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/textLastUpdated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Updated 2h ago"
                    android:textSize="12sp"
                    android:textColor="@color/on_surface_variant" />

            </LinearLayout>

            <!-- Price and change section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <!-- Current Price -->
                <TextView
                    android:id="@+id/textPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="K150.00"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/primary" />

                <!-- Price change indicator -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/change_bg_positive"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginStart="12dp">

                    <ImageView
                        android:id="@+id/iconChange"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_trending_up"
                        android:tint="@color/white"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/textChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+5.2%"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <!-- Additional info row (optional) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/textMarket"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lusaka Market"
                    android:textSize="11sp"
                    android:textColor="@color/on_surface_variant"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/textUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="per kg"
                    android:textSize="11sp"
                    android:textColor="@color/on_surface_variant" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>